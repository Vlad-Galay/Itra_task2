@model IEnumerable<testItra.Models.ApplicationUser>

@{
    ViewBag.Title = "GetUsers";
}


<h2>GetUsers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<button class="block-btn">Block</button>

<button class="unblock-btn">Unblock</button>

<button class="delete-btn">Delete</button>



<table class="table">
    <tr>
        <th>
            <input type="checkbox" onclick="" class="table__select-all" />
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastLoginDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" class="table__select-single" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastLoginDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
           
        </tr>
    }
    

</table>


@section scripts {
    @Scripts.Render("~/bundles/checkbox");
    
    }
